<% content_for :title do "GAC Login Page" end %>

<div id="login_form">
<h3>Welcome to Group Assignment Center</h3>
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
  <div>
    <h2>Please log in with your RegOnline username and password.</h2><br />
    <label for="username">Username:</label>
    <%= text_field_tag :username, params[:username] %>
  </div>
  <div>
    <label for="password">Password:</label>
    <%= password_field_tag :password, params[:password] %>
  </div>
  <% if APP_CONFIG.nil? or APP_CONFIG['account_id'].nil? %>
  <div>
    <label for="password">Account ID:</label>
    <%= password_field_tag :account_id, params[:account_id] %>
  </div>
  <% end %>
      
  <div>
    <%= submit_tag "Login" %>
  </div>
  <% end %>
</div>